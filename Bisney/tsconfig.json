  "compilerOptions": {    
    "composite": true,
    "baseUrl": "./",
    "noUncheckedIndexedAccess": true,
    "paths" : {      
      "@/*" : ["./src/*"],
      "public/*" : ["./public/*"],      
      "node_modules/*":["./node_modules/*"]
    }    
  },
  "include": ["src"],  
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

}

